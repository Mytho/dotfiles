# CLEANSVN - Recursively remove all .svn directories
# TODO: make zshell compatible
function cleansvn {
	echo -e "THIS WILL RECURSIVELY REMOVE ALL SVN DIRECTORIES."
	read -r -p "Do you want to continue? [yes/NO] " RESPONSE
	case $RESPONSE in
		[yY][eE][sS]|[yY])
			rm -rf `find . -type d -name .svn`
			;;
		*)
			;;
	esac
}

# MKCD - Create a directory and change to it
function mkcd {
	mkdir "$1"
	cd "$1"
}

# GLD - Pull a given Git directory
function gld {
	if [ ! -d "$1" ]; then
		echo "First argument must be a directory containing a Git repository.."
	else
		cd "$1" && git pull && cd -
	fi
}

# TGREP - Find string in files recursively
function tgrep {
	if test "$1" = ""
	then
		echo "First argument must be a string to search for.."
	else
		find . -type f \! -path "*.svn*" -exec egrep -Hni --color "$1" {} \;
	fi
}
