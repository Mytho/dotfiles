altscreen             # Stop fullscreen apps from appearing in scrollback
defscrollback   5000  # Number of scrollback lines
nethack         on    # Use nethack style messages
startup_message off   # No startup message
vbell           off   # No tabcompletion flash
bce             on    # Hack for poper coloring
defbce          on    # Hack for poper coloring

## NO WINDOW 0
bind c  screen 1
bind ^c screen 1
bind 0 select 10
screen 1

## KEY BINDINGS
# Cycling windows
bind h  prev
bind l  next
bind ^h prev
bind ^l next

# Cycling splitscreens
bind j  focus up
bind k  focus down
bind ^j focus up
bind ^k focus down

## STATUS BAR
# "%0`" should execute whoami
backtick 0 0 0 whoami
hardstatus alwayslastline "%{= Kk} %-Lw %{kK} %n %t %{-}%+LW %= %0`@%H %{kK} %l %{-} %Y/%m/%d %c:%s "

## LOGFILE LOCATION
logfile "/tmp/screenlog-%Y%m%d-%c:%s"
