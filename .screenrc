# No startup message
startup_message off

# Number of scrollback lines
defscrollback 5000

# No tabcompletion flash
vbell off

# Stop fullscreen apps from appearing in scrollback
altscreen

# Initial screens
screen -t  "vim"   2  vim
screen -t  "htop"  9  htop

# Start in screen 1
screen 1

# No window 0
bind c  screen 1
bind ^c screen 1

# Easiers cycling through windows
bind h prev
bind l next
bind ^h prev
bind ^l next

# Hack for proper coloring in Vim
bce "on"
defbce "on"

# Status bar
hardstatus alwayslastline "%{=}%{K} %= [ %-Lw%{+b w}%n %t%{-}%+LW ] %= "
