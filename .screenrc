## SETTINGS
defscrollback   65535 # Number of scrollback lines
defutf8         on    # Always use UTF8
nethack         on    # Use nethack style messages
nonblock        on    # Don't block everything, when unresponsive
startup_message off   # No startup message
vbell           off   # No tabcompletion flash
defbce          on    # Color hack
altscreen       on    # Stop fullscreen apps from appearing in scrollback
bell_msg        ""    # Don't show a bell message

## SHELL TITLE
shelltitle "$ |ZSH"

## NO WINDOW 0
bind c  screen 1
bind ^c screen 1
bind 0 select 10
screen 1

## KEY BINDINGS
# Cycling windows
bind h  prev
bind ^h prev
bind l  next
bind ^l next

# Cycling splitscreens
bind j  focus up
bind ^j focus up
bind k  focus down
bind ^k focus down

# Function keys
bindkey -k k1 select 1  # F1  = Screen 1
bindkey -k k2 select 2  # F2  = Screen 2
bindkey -k k3 select 3  # F3  = Screen 3
bindkey -k k4 select 4  # F4  = Screen 4
bindkey -k k5 select 5  # F5  = Screen 5
bindkey -k k6 select 6  # F6  = Screen 6
bindkey -k k7 select 7  # F7  = Screen 7
bindkey -k k8 select 8  # F8  = Screen 8
bindkey -k k9 select 9  # F9  = Screen 9
bindkey -k k; next      # F10 = Cycle windows
bindkey -k F1 screen 1  # F11 = New window
bindkey -k F2 title     # F12 = Rename window

# Other bindings
bind ^z mapdefault  # Escape next key
bind ^r detach      # Detach session

# Write copied data to OSX clipboard
bind ^b eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"

## STATUS BAR
#        id  lifetime  autorefresh  command
backtick 0   0         0            whoami
backtick 1   300       300          $HOME/.bin/weather.py Amsterdam Netherlands

hardstatus alwayslastline "%{= Kk} %-Lw %{wk} %n %t %{-}%+LW %= %0`@%H %{wk} %l %{-} %1` %{wk} %Y/%m/%d %c:%s %{-}"

## LOGFILE LOCATION
logfile "/tmp/screenlog-%Y%m%d-%c:%s"
