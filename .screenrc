# No startup message
startup_message off

# Number of scrollback lines
defscrollback 5000

# Stop fullscreen apps from appearing in scrollback
altscreen

# Init in screen 1
screen 1

# No window 0
bind c  screen 1
bind ^c screen 1
bind 0  screen 10

# Hack for proper coloring in Vim
bce "on"
defbce "on"
