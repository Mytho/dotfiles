# No startup message
startup_message off

# Number of scrollback lines
defscrollback 5000

# No tabcompletion flash
vbell off

# Stop fullscreen apps from appearing in scrollback
altscreen

# No window 0
bind c  screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# Easiers cycling through windows
bind h  prev
bind l  next
bind ^h prev
bind ^l next

# Easier cycling through splitscreens
bind j  focus up
bind k  focus down
bind ^j focus up
bind ^k focus down

# Hack for proper coloring
bce "on"
defbce "on"

# Status bar
hardstatus alwayslastline "%{=}%{K} %= [ %-Lw%{+b w}%n %t%{-}%+LW ] %= "
