# INDEX, PAGER
macro  index,pager  rr       "<reply>"                                                              "Reply"
macro  index,pager  ra       "<group-reply>"                                                        "Reply all"
#INDEX
macro  index        -        "<collapse-thread>"                                                    "Collapse thread"
macro  index        _        "<collapse-all>"                                                       "Collapse all"
# PAGER
macro  pager        j        "<next-line>"                                                          "Move one line down"
macro  pager        k        "<previous-line>"                                                      "Move one line up"
macro  pager        J        "<next-page>"                                                          "Move one page down"
macro  pager        K        "<previous-page>"                                                      "Move one page up"
macro  pager        <Space>  "<exit>"                                                               "Leave message"
macro  pager        u        "<pipe-entry>urlview<enter>"                                           "Follow an URL"
# GO TO MAILBOX
macro  index,pager  ga       "<change-folder>imaps://imap.gmail.com/[Gmail]/All<tab><enter>"        "Read Archive"
macro  index,pager  gd       "<change-folder>imaps://imap.gmail.com/[Gmail]/Drafts<enter>"          "Read Drafts"
macro  index,pager  gi       "<change-folder>imaps://imap.gmail.com/INBOX<enter>"                   "Read Inbox"
macro  index,pager  gs       "<change-folder>imaps://imap.gmail.com/[Gmail]/Sent<tab><enter>"       "Read Sent"
macro  index,pager  gt       "<change-folder>imaps://imap.gmail.com/[Gmail]/Trash<enter>"           "Read Trash"
macro  index,pager  za       "<change-folder>imaps://imap.zengerink.com/INBOX/Archive<enter>"       "Read Archive"
macro  index,pager  zd       "<change-folder>imaps://imap.zengerink.com/INBOX/Drafts<enter>"        "Read Drafts"
macro  index,pager  zi       "<change-folder>imaps://imap.zengerink.com/INBOX<enter>"               "Read Inbox"
macro  index,pager  zs       "<change-folder>imaps://imap.zengerink.com/INBOX/Sent<tab><enter>"     "Read Sent"
macro  index,pager  zt       "<change-folder>imaps://imap.zengerink.com/INBOX/Deleted<tab><enter>"  "Read Trash"
# SAVE TO MAILBOX
macro  index,pager  sga      "<save-message>imaps://imap.gmail.com/[Gmail]/All<tab><enter>"         "Move to Archive"
macro  index,pager  sgi      "<save-message>imaps://imap.gmail.com/INBOX<tab><enter>"               "Move to Inbox"
