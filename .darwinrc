# ALIASES
# -------

alias cleanup='find . -type f -name ".DS_Store" -delete'
alias locip='ipconfig getifaddr en0'
alias vi='mvim'
alias vimdiff='mvimdiff'

# GITCONFIG
# ---------

git config --global color.ui auto
git config --global core.excludefile ~/.gitignore
git config --global http.sslVerify false
git config --global user.name "T. Zengerink"
git config --global user.email "t.zengerink@gmail.com"
git config --global diff.tool gvimdiff
git config --global difftool.prompt false
git config --global difftool.gvimdiff.path `which mvimdiff`
git config --global merge.tool gvimdiff
git config --global mergetool.prompt false
git config --global mergetool.gvimdiff.path `which mvimdiff`
