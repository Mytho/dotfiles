[alias]
	ba = "branch -va"
	br = branch
	ca = "!git add -A && git ci"
	ci = commit
	co = "checkout -q"
	di = "!git difftool"
	lg = "log --pretty=format:'%C(bold black)%h%Creset %s %C(bold black)%an, %ad%Creset' --graph --date=relative"
	mg = "merge --no-ff"
	pl = "!git pull && git submodule foreach git pull"
	sh = "!fn() { git difftool $1^!; }; fn"
	st = "status -s --ignore-submodules=dirty"
[color]
	ui = auto
	branch = auto
	status = auto
[color "branch"]
	current = white bold
	local = normal
	remote = red bold
[color "diff"]
	commit = green bold
	meta = red bold
	frag = red bold
	old = red bold
	new = green bold
[color "status"]
	header = normal
	added = red bold
	updated = red bold
	changed = green bold
	untracked = green bold
	nobranch = white bold
[core]
	excludesfile = ~/.gitignore
	editor = vi -u NONE
	pager = less -F -X
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[http]
	sslVerify = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[user]
	email = t.zengerink@gmail.com
	name = Teun Zengerink
[push]
	default = matching
