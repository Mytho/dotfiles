[alias]
	st = status -s
	ci = commit
	co = checkout
	br = branch
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore
	editor = vim
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[http]
	sslVerify = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[user]
	email = t.zengerink@gmail.com
	name = T. Zengerink
[push]
	default = matching
