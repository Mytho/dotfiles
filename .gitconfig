[alias]
	ad = add
	br = branch -vv
	ai = "!git add -A && git ci"
	aip = "!git ai && git pu"
	ci = commit
	ca = "commit --amend"
	co = "checkout -q"
	di = "!git difftool"
	fe = "fetch -p"
	#lg = "log --pretty=format:'%C(bold black)%h%Creset %s %C(bold black)%an, %ad%Creset' --date=relative"
	lg = "log"
	mg = merge
	pu = push
	pf = "push --force-with-lease"
	pfn = "push --force-with-lease --no-verify"
	pl = pull
	pr = pull --rebase
	rb = rebase
	rs = reset
	st = "status -s --ignore-submodules=dirty"
	sl = stash list
	ss = stash save
	sp = stash pop
	sh = "!showtool () { rev=${1:-HEAD}; git difftool $rev~1 $rev; }; showtool $1"
[color]
	ui = auto
	branch = auto
	status = auto
[color "branch"]
	current = green bold
	local = white bold
	remote = red bold
	upstream = black bold
[color "diff"]
	commit = white bold
	meta = black bold
	frag = black bold
	old = red bold
	new = green bold
[color "status"]
	header = normal
	added = green bold
	updated = green bold
	changed = red bold
	untracked = red bold
	nobranch = white bold
[color "interactive"]
	prompt = white bold
	header = white bold
	help = normal
	error = red bold
[commit]
	gpgsign = false
[core]
	excludesfile = ~/.gitignore
	editor = vim
	pager = less -R
[diff]
	tool = vscode
[difftool "vscode"]
	prompt = false
	cmd = code --wait --diff $LOCAL $REMOTE
[gpg]
	program = gpg
[http]
	sslVerify = false
[merge]
	tool = vscode
[mergetool "vscode"]
	prompt = false
	cmd = code --wait $MERGED
[user]
	name = Teun Zengerink
	signingkey = D45951B13602B995
[push]
	default = current
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
