[alias]
	ba = "branch -va"
	br = branch
	ca = "!git add -A && git ci"
	ci = commit
	co = "checkout -q"
	di = difftool
	lg = "log --pretty=format:'%C(bold black)%h%Creset %s %C(bold black)%an, %ad%Creset' --graph --date=relative"
	mg = "merge --no-ff"
	pl = "!git pull && git submodule foreach git pull"
	st = "status -s --ignore-submodules=dirty"
[color]
	ui = auto
	branch = auto
	status = auto
[color "branch"]
	current = white bold
	local = normal
	remote = red bold
[color "diff"]
	commit = white bold
	meta = black bold
	frag = black bold
	old = black bold
	new = white bold
[color "status"]
	header = normal
	added = white bold
	updated = white bold
	changed = black bold
	untracked = black bold
	nobranch = red bold
[core]
	excludesfile = ~/.gitignore
	editor = vim
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[http]
	sslVerify = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[user]
	email = t.zengerink@gmail.com
	name = T. Zengerink
[push]
	default = matching
