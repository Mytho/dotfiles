[alias]
	st = status -s
	ci = commit
	co = checkout
	br = branch
	di = difftool
	lg = "log --pretty=format:'%C(bold black)%H%Creset %s %C(bold black)%an%Creset' --graph"
	mg = "merge --no-ff"
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore
	editor = vim
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[http]
	sslVerify = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[user]
	email = t.zengerink@gmail.com
	name = T. Zengerink
[push]
	default = matching
