[alias]
	st = status -s
	ci = commit
	co = checkout -q
	br = branch -v
	di = difftool
	lg = "log --pretty=format:'%C(bold black)%h%Creset %s %C(bold black)%an%Creset' --graph"
	mg = "merge --no-ff"
[color]
	ui = auto
	branch = auto
	status = auto
[color "branch"]
	current = green
	local = yellow
	remote = red
[color "status"]
	untracked = yellow
[core]
	excludesfile = ~/.gitignore
	editor = vim
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[http]
	sslVerify = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[user]
	email = t.zengerink@gmail.com
	name = T. Zengerink
[push]
	default = matching
