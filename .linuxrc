# ALIASES
# -------

alias locip='ip addr show eth0 | egrep "inet\ " | awk "{ print \$2}" | sed "s#/[0-9]*##g"'
alias ls='ls --color=auto --group-directories-first'

# GITCONFIG
# ---

git config --global color.ui auto
git config --global core.editor `which vim`
git config --global core.excludefile ~/.gitignore
git config --global http.sslVerify false
git config --global user.name "T. Zengerink"
git config --global user.email "t.zengerink@gmail.com"
git config --global git.diff = vimdiff
git config --global git.merge = vimdiff
