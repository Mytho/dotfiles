# PROMPT & COLORS
# ---------------

if [ -f "/usr/bin/dircolors" ]; then
	eval `/usr/bin/dircolors ~/.dircolors`
fi

highlight="yellow"
PS1=$PS1

# ALIASES
# -------

alias locip='ip addr show eth0 | egrep "inet\ " | awk "{ print \$2}" | sed "s#/[0-9]*##g"'
alias ls='ls --color=auto --group-directories-first'
