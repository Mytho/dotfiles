# CLEANXATTR
# ----------
# Remove X-attributes from all passed files.

if [[ $# -eq "0" ]]; then
	echo "Usage: $0 [filepaths]"
else
	for FILE in $*; do
		xattr -d com.apple.FinderInfo "$FILE"
		xattr -d com.apple.ResourceFork "$FILE"
		xattr -d com.apple.metadata:kMDItemIsScreenCapture "$FILE"
		xattr -d com.apple.metadata:kMDItemScreenCaptureType "$FILE"
		xattr -d com.apple.metadata:kMDItemWhereFroms "$FILE"
		xattr -d com.apple.quarantine "$FILE"
	done
fi
