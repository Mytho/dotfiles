# Global
alias -g L='| less -S'
alias -g T='| tail'
alias -g J='| python2 -mjson.tool'

# Git
alias ga='git ad'
alias gb='git br'
alias gi='git ci'
alias gai='git ai'
alias gaip='git aip'
alias gd='git di'
alias gdu='git di @{u}...'
alias gf='git fe'
alias gl='git lg'
alias gm='git mg'
alias gc='git co'
alias gca='git ca'
alias gp='git pu'
alias gpf='git pf'
alias gu='git pl'
alias gur='git pr'
alias gr='git rs'
alias grb='git rb'
alias gs='git st'
alias gsa='git sa'
