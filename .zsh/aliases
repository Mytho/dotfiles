# GLOBAL
# ------

alias -g C='| wc -l'
alias -g H='| head'
alias -g L='| less'
alias -g T='| tail'

# NAVIGATION
# ----------

alias l='ls -lh'
alias la='ls -A'
alias ll='ls -lah'
alias lr='ls -lR'              # Recursively list
alias lsd='ls -l | grep "^d"'  # List directories
alias lt='ll -rt'              # Sort by date
alias lx='ll -Bx'              # Sort by extension
alias lz='ll -rS'              # Sort by size
alias real='cd $(pwd -P)'      # Go to real path of symlink
alias ..='up'                  # Alias for the up function

# VERSION CONTROL
# ---------------

alias gca='git add . && git commit -a'
alias gdiff='git difftool'
alias glog-branch='git log --merges --first-parent --pretty=oneline'
alias glog='git log --pretty=oneline --graph'
alias gmerge='git merge --no-ff'
alias greset='git reset -q --hard HEAD'
alias sdiff='svn diff --diff-cmd ~/.subversion/diff --'
alias svn='python ~/.zsh/scripts/svn-color.py'

# VIRTUAL ENVIRONMENTS
# --------------------

alias ve2='virtualenv .env --python=python2'
alias ve='virtualenv .env'
alias vea='source .env/bin/activate'
alias ved='deactivate'
alias nve='nodeenv .env-node'
alias nva='source .env-node/bin/activate'
alias nvd='deactivate_node'

# SEARCH GOOGLE
# -------------

alias google='~/.zsh/scripts/google-search.py'
alias google-gh='~/.zsh/scripts/google-search.py --site github.com -a'
alias google-mdn='~/.zsh/scripts/google-search.py --site developer.mozilla.org -a'
alias google-sf='~/.zsh/scripts/google-search.py --site serverfault.com -a'
alias google-so='~/.zsh/scripts/google-search.py --site stackoverflow.com -a'

# OTHER
# -----

alias conn='~/.zsh/scripts/connection-check.py'
alias df='df -h'
alias dirtree='find . -not \( -type d -name .svn -prune \) -print | sed -e "s;[^/]*/;|___;g;s;___|; |;g"'
alias du1='du -d 1'
alias du='du -c -h'
alias dwn='curl -O'
alias extip='curl ifconfig.me/ip'
alias fn='find . -name'
alias hi='history -d | tail -20'
alias ips='locip && extip'
alias mysql='mysql -p'
alias vd='vimdiff'
alias vis='vim -S ~/.vim/sessions/default'
alias viq='vim "+set ft=mysql" /var/tmp/query.sql'

# SUFFIXES
# --------

alias -s coffee=vim
alias -s css=vim
alias -s htm=vim
alias -s html=vim
alias -s js=vim
alias -s markdown=vim
alias -s md=vim
alias -s php=vim
alias -s sql=vim
alias -s txt=vim
alias -s vim=vim
alias -s xml=vim
