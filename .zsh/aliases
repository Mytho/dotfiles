# global
alias -g L='| less -S'
alias -g T='| tail'
alias -g J='| python3 -mjson.tool'
alias -g C='| pbcopy'

# navigation
alias l='ls -l'
alias ll='ls -lAh'
alias lt='ll -rt' # Sort by date
alias lx='ll -Bx' # Sort by extension
alias lz='ll -rS' # Sort by size

# git / github
alias g='git'
alias ce='gh copilot explain'
alias cs='gh copilot suggest'

# tools
alias t="tmux new -A -s NN"
alias n='nvim'
alias f='fzf'
alias d=docker
alias di="icdiff --color-map='description:white,separator:none'"
