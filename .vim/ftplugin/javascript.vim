" ------------------------------------------------------------------------------
" GENERAL SETTINGS
" ------------------------------------------------------------------------------

	setlocal expandtab
	setlocal tabstop=4
	setlocal shiftwidth=4

" ------------------------------------------------------------------------------
" FOLDING SETTINGS
" ------------------------------------------------------------------------------

	setlocal foldlevel=0
	setlocal foldnestmax=3

" ------------------------------------------------------------------------------
" AUTO COMMANDS
" ------------------------------------------------------------------------------

	" Mark trailing comma's
	autocmd BufEnter,InsertLeave <buffer> 2match Error /,\_s*[])}]/
